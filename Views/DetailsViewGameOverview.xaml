<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    mc:Ignorable="d">

    <Style x:Key="ContextButton" TargetType="{x:Type Button}" BasedOn="{StaticResource BaseStyle}">
        <Setter Property="Background" Value="{DynamicResource PlayButtonBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PlayBorderBrush}" />
        <Setter Property="BorderThickness" Value="{DynamicResource ControlBorderThickness}" />
        <Setter Property="Padding" Value="10,5,10,5" />
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid x:Name="Grid">
                        <Border x:Name="DefaultBorder" Cursor="Hand" BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"  Background="{TemplateBinding Background}"
                                Opacity="1" CornerRadius="{DynamicResource ControlCornerRadius}"/>
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" RecognizesAccessKey="True" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="True" />
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="{DynamicResource DisabledBackgroundBrush}" TargetName="DefaultBorder" />
                            <Setter Property="Opacity" TargetName="Grid" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                <Setter Property="Background" Value="{DynamicResource ContextButtonBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource ContextBorderBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ExtraMetadataLogoPath" TargetType="TextBlock">
        <Setter Property="Text">
            <Setter.Value>
                <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                    <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                    <Binding Source="\ExtraMetadata\games\"/>
                    <Binding Path="Game.Id"/>
                    <Binding Source="\logo.png" />
                </MultiBinding>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ExtraMetadataLogoLeftPath" TargetType="TextBlock">
        <Setter Property="Text">
            <Setter.Value>
                <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                    <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                    <Binding Source="\ExtraMetadata\games\"/>
                    <Binding Path="Game.Id"/>
                    <Binding Source="\logo-l.png" />
                </MultiBinding>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ExtraMetadataLogoRightPath" TargetType="TextBlock">
        <Setter Property="Text">
            <Setter.Value>
                <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                    <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                    <Binding Source="\ExtraMetadata\games\"/>
                    <Binding Path="Game.Id"/>
                    <Binding Source="\logo-r.png" />
                </MultiBinding>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ExtraMetadataHeaderPath" TargetType="TextBlock">
        <Setter Property="Text">
            <Setter.Value>
                <MultiBinding StringFormat="{}{0}{1}{2}{3}">
                    <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                    <Binding Source="\ExtraMetadata\games\"/>
                    <Binding Path="Game.Id"/>
                    <Binding Source="\header.jpg" />
                </MultiBinding>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type DetailsViewGameOverview}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DetailsViewGameOverview}">
                    <Grid d:DesignWidth="1520" d:DesignHeight="1080"
                        d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameDetailsIntance}"
                          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">

                        <TextBlock Name="LogoPath" Style="{DynamicResource ExtraMetadataLogoPath}"
                                   Visibility="Collapsed" Tag="{DynamicResource ExtraMetadataPath}"/>
                        <TextBlock Name="LogoLeftPath" Style="{DynamicResource ExtraMetadataLogoLeftPath}"
                                   Visibility="Collapsed" Tag="{DynamicResource ExtraMetadataPath}"/>
                        <TextBlock Name="LogoRightPath" Style="{DynamicResource ExtraMetadataLogoRightPath}"
                                   Visibility="Collapsed" Tag="{DynamicResource ExtraMetadataPath}"/>
                        <TextBlock Name="HeaderPath" Style="{DynamicResource ExtraMetadataHeaderPath}" 
                                   Visibility="Collapsed"  Tag="{DynamicResource ExtraMetadataPath}"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Tag="{Settings CalculatedGameDetailsIndentation}">
                                    <RowDefinition.Style>
                                        <Style TargetType="RowDefinition">
                                            <Setter Property="MaxHeight" Value="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"/>
                                            <Setter Property="MinHeight" Value="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Settings IndentGameDetails}" Value="false">
                                                    <Setter Property="MaxHeight" Value="0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </RowDefinition.Style>
                                </RowDefinition>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <ScrollViewer Tag="{DynamicResource BGModeOn}" VerticalScrollBarVisibility="Hidden"
                                          HorizontalScrollBarVisibility="Disabled" IsHitTestVisible="False">
                                <FadeImage x:Name="PART_ImageBackground" Tag="{DynamicResource BGModeOn}"
                                       Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Center">
                                    <FadeImage.Resources>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Settings IndentGameDetails}" Value="false">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </FadeImage.Resources>
                                    <FadeImage.Style>
                                        <Style TargetType="FadeImage">
                                            <Setter Property="Grid.RowSpan" Value="2"/>
                                            <Setter Property="Stretch" Value="UniformToFill"/>
                                            <Setter Property="VerticalAlignment" Value="Stretch"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                    <Setter Property="Stretch" Value="Uniform"/>
                                                    <Setter Property="VerticalAlignment" Value="Top"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </FadeImage.Style>
                                </FadeImage>
                                <ScrollViewer.Style>
                                    <Style TargetType="ScrollViewer">
                                        <Setter Property="Grid.RowSpan" Value="2"/>
                                        <Setter Property="VerticalScrollBarVisibility" Value="Disabled"/>
                                        <Setter Property="OpacityMask">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0.9" EndPoint="0,1">
                                                    <GradientStop Offset="0" Color="{DynamicResource PopupBackgroundColor}"/>
                                                    <GradientStop Offset="1" Color="{DynamicResource PopupBackgroundTransparent}" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                <Setter Property="Grid.RowSpan" Value="3"/>
                                                <Setter Property="OpacityMask">
                                                    <Setter.Value>
                                                        <RadialGradientBrush GradientOrigin="0.5,0" Center="0.5,0" RadiusX="2" RadiusY="0.9">
                                                            <RadialGradientBrush.GradientStops>
                                                                <GradientStop Color="Black" Offset="0.3" />
                                                                <GradientStop Color="Transparent" Offset="1" />
                                                            </RadialGradientBrush.GradientStops>
                                                        </RadialGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ScrollViewer.Style>
                            </ScrollViewer>

                            <Grid Grid.Column="1"  Grid.Row="0" Margin="0" Name="TitleGrid"
                                  Width="{Binding ElementName=DetailsPanel, Path=ActualWidth}"
                                  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Settings IndentGameDetails}" Value="false">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="4*" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                                <Image Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"
                                   HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform"
                                   Name="LogoImage" RenderOptions.BitmapScalingMode="Fant" Margin="0"
                                   Tag="{DynamicResource UseAbsoluteExtraMetadataPath}">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="{Binding ElementName=LogoPath, Path=Text}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                    <Setter Property="Source" Value="{Binding ElementName=LogoPath, Path=Text, Converter={StaticResource ImageStringToImageConverter}}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <Image Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                                   HorizontalAlignment="Left" VerticalAlignment="Center" Stretch="Uniform"
                                   Name="LogoImageLeft" RenderOptions.BitmapScalingMode="Fant" Margin="20,0,-20,0"
                                   Tag="{DynamicResource UseAbsoluteExtraMetadataPath}">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="{Binding ElementName=LogoPath, Path=Text}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                                    <Setter Property="Source" Value="{Binding ElementName=LogoLeftPath, Path=Text, Converter={StaticResource ImageStringToImageConverter}}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <Image Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2"
                                   HorizontalAlignment="Right" VerticalAlignment="Center" Stretch="Uniform"
                                   Name="LogoImageRight" RenderOptions.BitmapScalingMode="Fant" Margin="-20,0,20,0"
                                   Tag="{DynamicResource UseAbsoluteExtraMetadataPath}">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="{Binding ElementName=LogoPath, Path=Text}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                                    <Setter Property="Source" Value="{Binding ElementName=LogoRightPath, Path=Text, Converter={StaticResource ImageStringToImageConverter}}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <TextBlock Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       TextAlignment="Center"
                                       FontFamily="{DynamicResource FontFamily}" TextOptions.TextRenderingMode="Aliased"
                                       Text="{Binding Game.DisplayName}" FontWeight="Regular"
                                       FontSize="{DynamicResource FontSizeLargest}"
                                       TextWrapping="WrapWithOverflow"
                                       Foreground="White" Typography.Capitals="SmallCaps">
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="0"
                                                         Color="{DynamicResource MainColor}"
                                                         Opacity="1"
                                                         BlurRadius="5"/>
                                    </TextBlock.Effect>
                                    <TextBlock.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding ElementName=LogoImage, Path=Source}" Value="{x:Null}"/>
                                                        <Condition Binding="{Binding ElementName=LogoImageLeft, Path=Source}" Value="{x:Null}"/>
                                                        <Condition Binding="{Binding ElementName=LogoImageRight, Path=Source}" Value="{x:Null}"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="{DynamicResource TitleTextVisibility}"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Resources>
                                </TextBlock>
                            </Grid>

                            <Grid Grid.Row="1" Grid.RowSpan="2" Tag="{DynamicResource BGModeOn}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="Width" Value="{DynamicResource DetailsViewPanelWidth}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <Border Grid.Row="0" VerticalAlignment="Top" Tag="{DynamicResource BGModeOn}"
                                    Height="{Binding ElementName=ControlButtons, Path=ActualHeight}" HorizontalAlignment="Stretch"
                                    BorderBrush="{DynamicResource PanelSeparatorBrush}" Background="{DynamicResource PanelBackgroundBrush}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderThickness" Value="0,1,0,1"/>
                                            <Setter Property="Margin" Value="0"/>
                                            <Setter Property="Grid.Column" Value="0"/>
                                            <Setter Property="Grid.ColumnSpan" Value="3"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="Margin" Value="-1,0,-1,0"/>
                                                    <Setter Property="Grid.Column" Value="1"/>
                                                    <Setter Property="Grid.ColumnSpan" Value="1"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Settings ShowPanelSeparators}" Value="False">
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                </DataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Settings ShowPanelSeparators}" Value="false"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Margin" Value="0"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Settings IndentGameDetails}" Value="false"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="false"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Settings IndentGameDetails}" Value="false"/>
                                                        <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="BorderThickness" Value="1,0,1,1"/>
                                                </MultiDataTrigger>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Settings ShowPanelSeparators}" Value="False"/>
                                                        <Condition Binding="{Settings IndentGameDetails}" Value="false"/>
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <Border Grid.Row="1" Tag="{DynamicResource BGModeOn}"
                                VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                BorderBrush="{DynamicResource PanelSeparatorBrush}"
                                Background="{DynamicResource PanelBackgroundBrush}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderThickness" Value="1,0,1,0"/>
                                            <Setter Property="Margin" Value="-1,0,-1,0"/>
                                            <Setter Property="Grid.Column" Value="0"/>
                                            <Setter Property="Grid.ColumnSpan" Value="3"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                    <Setter Property="Grid.Column" Value="1"/>
                                                    <Setter Property="Grid.ColumnSpan" Value="1"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Settings ShowPanelSeparators}" Value="false">
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="Margin" Value="0"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </Grid>

                            <Grid Name="ControlsBar" Grid.Column="1" Grid.Row="1" MinWidth="{Binding ElementName=DetailsPanel, Path=ActualWidth}"
                                  HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="{Binding ElementName=DetailsLeftPanel, Path=ActualWidth}"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto" MinWidth="{Binding ElementName=DetailsRightPanel, Path=ActualWidth}"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.Resources>
                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                        <Setter Property="FontSize" Value="{DynamicResource FontSizeLarger}"/>
                                        <Setter Property="TextOptions.TextRenderingMode" Value="Aliased" />
                                        <Setter Property="Margin" Value="1,0,0,0" />
                                        <Setter Property="MinWidth" Value="40" />
                                        <Setter Property="MinHeight" Value="40" />
                                        <Setter Property="Background" Value="Transparent" />
                                        <Setter Property="BorderBrush" Value="Transparent" />
                                        <Setter Property="Foreground" Value="{DynamicResource GlyphBrush}" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource DetailsButtonBrush}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Resources>
                                <StackPanel x:Name="ControlButtons" Grid.Column="0" Margin="20,0,0,0" Orientation="Horizontal" >
                                    <Button Name="PART_ButtonPlayAction" Width="{Binding ElementName=PART_ImageCover, Path=ActualWidth}"
                                            MinWidth="80" FontSize="{DynamicResource FontSizeLarger}" Style="{DynamicResource PlayButton}" />
                                    <Button Name="PART_ButtonContextAction" Width="{Binding ElementName=PART_ImageCover, Path=ActualWidth}"
                                            MinWidth="80" Style="{DynamicResource ContextButton}" FontSize="{DynamicResource FontSizeLarger}"/>
                                    <Button Name="PART_ButtonMoreActions"
                                                Content="&#xE10C;" FontFamily="{DynamicResource SymbolFont}"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal"
                                                    VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <StackPanel.Resources>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                        </Style>
                                        <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                                            <Setter Property="Foreground" Value="{DynamicResource TextBrushDarker}"/>
                                            <Setter Property="FontFamily" Value="{DynamicResource SymbolFont}"/>
                                            <Setter Property="FontSize" Value="{DynamicResource FontSizeLarger}"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="20,0,10,0" />
                                        </Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Margin" Value="0,0,20,0"/>
                                        </Style>
                                    </StackPanel.Resources>
                                    <StackPanel Orientation="Horizontal" ToolTip="{DynamicResource LOCTimePlayed}">
                                        <Label Name="PART_ElemPlayTime" Content="&#x23F3;"/>
                                        <TextBlock Name="PART_TextPlayTime"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Tag="{DynamicResource Htlb_EnableIntegrationInCustomTheme}">
                                        <StackPanel Orientation="Horizontal" Tag="{DynamicResource Htlb_HasData}" ToolTip="{DynamicResource LOCHowLongToBeat}">
                                            <Label Content="&#x23F1;" FontFamily="{DynamicResource SymbolFont}"/>
                                            <TextBlock Text="{DynamicResource Htlb_TimeToBeatFormat}"/>
                                            <StackPanel.Style>
                                                <Style>
                                                    <Setter Property="Control.Visibility" Value="Collapsed"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                            <Setter Property="Control.Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                        </StackPanel>
                                        <StackPanel.Style>
                                            <Style>
                                                <Setter Property="Control.Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                                        <Setter Property="Control.Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" ToolTip="{DynamicResource LOCLastPlayed}">
                                        <Label Name="PART_ElemLastPlayed" Content="&#xE163;"/>
                                        <TextBlock Name="PART_TextLastActivity"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" ToolTip="{DynamicResource LOCCompletionStatus}">
                                        <Label Name="PART_ElemCompletionStatus" Content="&#xE10B;"/>
                                        <TextBlock Name="PART_TextCompletionStatus"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                                    <StackPanel Tag="{DynamicResource Htlb_EnableIntegrationInCustomTheme}">
                                        <Button Name="PART_HltbCustomButton" Content="&#x23F1;" ToolTip="{DynamicResource LOCHowLongToBeat}"
                                                    FontFamily="{DynamicResource SymbolFont}"/>
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}"  Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                    </StackPanel>

                                    <StackPanel Tag="{DynamicResource Sc_EnableIntegrationInCustomTheme}">
                                        <Button Name="PART_ScCustomButton" Content="&#x1F396;" ToolTip="SuccessStory"
                                                    FontFamily="{DynamicResource SymbolFont}" />
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                    </StackPanel>

                                    <Button x:Name="PART_ButtonEditGame" Margin="0" ToolTip="{DynamicResource LOCEditGame}"
                                                FontFamily="{DynamicResource SymbolFont}" Content="&#xE104;"/>
                                    <StackPanel.Style>
                                        <Style TargetType="StackPanel">
                                            <Setter Property="Visibility" Value="Hidden" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Grid}}"  Value="True">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                </StackPanel>
                            </Grid>

                            <ScrollViewer Name="DetailsPanel" Grid.Column="1" Grid.Row="2"
                                          MaxWidth="{DynamicResource DetailsViewPanelWidth}"
                                          HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                                <ScrollViewer.Resources>
                                    <Style TargetType="ScrollBar" BasedOn="{StaticResource {x:Type ScrollBar}}">
                                        <Setter Property="Margin" Value="0,20,0,0"/>
                                    </Style>
                                </ScrollViewer.Resources>
                                <ScrollViewer.OpacityMask>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,20" MappingMode="Absolute">
                                        <LinearGradientBrush.GradientStops>
                                            <GradientStop Offset="0" Color="Transparent"/>
                                            <GradientStop Offset="1" Color="White"/>
                                        </LinearGradientBrush.GradientStops>
                                    </LinearGradientBrush>
                                </ScrollViewer.OpacityMask>
                                <DockPanel Margin="20">
                                    <StackPanel Name="DetailsRightPanel" Orientation="Vertical"
                                                    DockPanel.Dock="Right" Margin="20,20,00,0">

                                        <GridEx HorizontalAlignment="Left" Margin="0"
                                                ColumnCount="2" RowCount="12" AutoLayoutColumns="2">
                                            <GridEx.Resources>
                                                <Style TargetType="ItemsControl">
                                                    <Setter Property="VerticalAlignment" Value="Center" />
                                                    <Setter Property="Margin" Value="10,0,0,10" />
                                                </Style>
                                                <Style TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
                                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Setter Property="Margin" Value="0,0,10,10" />
                                                    <Setter Property="Foreground" Value="{DynamicResource TextBrushDarker}"/>
                                                    <Setter Property="FontSize" Value="{DynamicResource FontSizeLarger}" />
                                                    <Setter Property="FontFamily" Value="{DynamicResource SymbolFont}"/>
                                                </Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="BorderBrush" Value="{DynamicResource HoverBorderBrush}"/>
                                                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                                                    <Setter Property="Margin" Value="-1,5,0,5"/>
                                                </Style>
                                                <Style TargetType="Button" BasedOn="{StaticResource PropertyItemButton}" >
